.question {
  position: relative;
  border: 1.6px dashed rgb(21, 199, 243);
  border-radius: 25rpx;
  margin: 50rpx 54rpx;
  padding: 50rpx 24rpx;
  text-align: left;
  min-height: 150rpx;
}

.title {
  background: white;
  color: #0a53f0;
  font-size: 18px;
  text-align: center;
  width: 88px;
  height: 20px;
  line-height: 20px;
  position: absolute;
  top: -10px;
  left: 50%;
  margin-left: -44px;
}

.button-container {
  margin-top: 60rpx;
  display: flex;
  justify-content: center;
}

.button-pre {
  background-color: rgba(238, 231, 138, 0.726);
  color: black;
}

.button-next {
  background-color: rgba(135, 202, 223, 0.507);
  color: black;
}

.button-tip {
  background-color: rgb(69, 111, 189);
  color: white;
}

.button-help {
  background-color: rgb(190, 82, 82);
  color: white;
}

